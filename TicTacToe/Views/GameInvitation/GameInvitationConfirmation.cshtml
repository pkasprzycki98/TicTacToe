    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@Localizer["Użytkownik {0} został przez Ciebie zaproszony do gry Kółko i krzyżyk. Proszę czekać, aż się połączy", Model.EmailTo]</h1>
